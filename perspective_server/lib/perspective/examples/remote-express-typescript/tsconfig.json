{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "strict": true,
        "alwaysStrict": true,
    },
    "include": [
        "src/server.ts"
    ],
    "exclude": [
        "node_modules",
    ]
}